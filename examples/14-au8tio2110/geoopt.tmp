 &GLOBAL
   PRINT_LEVEL   LOW
   PROJECT_NAME  
   RUN_TYPE      GEO_OPT
 &END GLOBAL

 &MOTION
   &GEO_OPT
     MAX_ITER        2000
     STEP_START_VAL  0
   &END GEO_OPT
   &CONSTRAINT
     &FIXED_ATOMS
       COMPONENTS_TO_FIX XYZ
       LIST  216..431
     &END FIXED_ATOMS
   &END CONSTRAINT
 &END MOTION

 &FORCE_EVAL
   METHOD  QS
   &DFT
     BASIS_SET_FILE_NAME    ../BASIS
     POTENTIAL_FILE_NAME    ../GTH_POTENTIALS
     WFN_RESTART_FILE_NAME     
     SURFACE_DIPOLE_CORRECTION T   
     SURF_DIP_DIR              Z
     &SCF
       MAX_SCF    600
       EPS_SCF    1.E-05
       SCF_GUESS  RESTART
       &OT T
         MINIMIZER       CG
         LINESEARCH      3PNT
         PRECONDITIONER  FULL_SINGLE_INVERSE !FULL_ALL
       &END OT
     &END SCF
     &QS
       EPS_DEFAULT          1.E-10
       EPS_PGF_ORB          1.E-05
       EXTRAPOLATION        ASPC
       EXTRAPOLATION_ORDER  1
     &END QS
     &MGRID
       CUTOFF  4.2E+02
     &END MGRID
     &XC
       DENSITY_CUTOFF   1.E-10
       GRADIENT_CUTOFF  1.E-10
       TAU_CUTOFF       1.E-10
       &XC_FUNCTIONAL NO_SHORTCUT
         &PBE T
         &END PBE
       &END XC_FUNCTIONAL
       &VDW_POTENTIAL
         POTENTIAL_TYPE  PAIR_POTENTIAL
         &PAIR_POTENTIAL
           R_CUTOFF             1.E+01
           TYPE                 DFTD3
           PARAMETER_FILE_NAME  ../dftd3.dat
           REFERENCE_FUNCTIONAL PBE
         &END PAIR_POTENTIAL
       &END VDW_POTENTIAL
     &END XC
     &PRINT
     &END PRINT
   &END DFT
   &SUBSYS
     &CELL
       ABC      18.91 17.72 30.00
       PERIODIC XYZ
       MULTIPLE_UNIT_CELL  1 1 1
     &END CELL
     &COORD
       @INCLUDE  XXX
     &END COORD
     &KIND C
       BASIS_SET  DZVP-MOLOPT-SR-GTH-q4
       POTENTIAL  GTH-PBE-q4      
     &END KIND
     &KIND O
       BASIS_SET  DZVP-MOLOPT-SR-GTH-q6
       POTENTIAL  GTH-PBE-q6
     &END KIND
     &KIND H
       BASIS_SET  DZVP-MOLOPT-SR-GTH-q1
       POTENTIAL  GTH-PBE-q1       
     &END KIND
     &KIND Ti
       BASIS_SET  DZVP-MOLOPT-SR-GTH-q12
       POTENTIAL  GTH-PBE-q12
     &END KIND
     &KIND Au
       BASIS_SET  DZVP-MOLOPT-SR-GTH-q11
       POTENTIAL  GTH-PBE-q11
     &END KIND
     &TOPOLOGY
       MULTIPLE_UNIT_CELL  1 1 1
     &END TOPOLOGY
   &END SUBSYS
 &END FORCE_EVAL
